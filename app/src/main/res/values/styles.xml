<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item> <!-- 타이틀바 -->
        <item name="colorPrimaryDark">@android:color/black</item> <!-- 최상단 시스템상태 바 -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item> <!-- 타이틀바 없애기 -->
        <item name="windowNoTitle">true</item> <!-- 타이틀바 없애기 -->

        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item> <!-- Spinner Style-->
    </style>

    <!-- Customize Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>


</resources>
