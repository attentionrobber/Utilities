<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_memo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utilities.Memo.MemoNewActivity">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btn_addImg"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/btn_OK"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_simple_btn_ripple"/>
        <ImageButton
            android:id="@+id/btn_addLocation"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:layout_above="@+id/textView_title"
            android:layout_toRightOf="@+id/btn_addImg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_alignTop="@+id/btn_addImg"
            android:src="@android:drawable/ic_menu_mylocation"
            android:background="@drawable/bg_simple_btn_ripple" />

        <Button
            android:id="@+id/btn_OK"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_cancel"
            android:layout_toStartOf="@+id/btn_cancel"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_simple_btn_ripple"/>
        <Button
            android:id="@+id/btn_cancel"
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_simple_btn_ripple"/>

        <EditText
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Input Title"
            android:textSize="24sp"
            android:layout_below="@+id/btn_addImg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_simple"
            android:inputType="text"
            android:layout_height="40dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editText_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="top"
        android:hint="Input Content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layout_top"
        android:layout_margin="3dp"
        android:background="@drawable/bg_simple"
        android:inputType="textMultiLine" />

</RelativeLayout>
