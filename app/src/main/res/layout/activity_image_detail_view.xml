<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.utilities.Gallery.ImageDetailViewActivity">

    <RelativeLayout
        android:id="@+id/layout_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.utilities.Gallery.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">
        </com.example.utilities.Gallery.CustomViewPager>
        <!--
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">
        </android.support.v4.view.ViewPager>
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_top_tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@android:color/transparent">
        <ImageButton
            android:id="@+id/btn_img_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/btn_img_info"
            android:layout_toStartOf="@+id/btn_img_info"
            android:layout_centerVertical="true"
            android:background="@drawable/button"
            android:src="@android:drawable/ic_menu_delete" />
        <ImageButton
            android:id="@+id/btn_img_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button"
            android:src="@android:drawable/ic_menu_info_details"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_bot_tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="#000000">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_imgInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#99000000">
        <TextView
            android:id="@+id/tv_imgInfo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imgInfo_title"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/tv_imgInfo_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imgInfo_size"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/tv_imgInfo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imgInfo_date"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/tv_imgInfo_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imgInfo_path"
            android:textColor="#FFFFFF" />
    </LinearLayout>
